!!$HOME/.Xdefault


!! Xft
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight



!! urxvt

!! URL
URxvt.colorUL:              #4682B4
URxvt.url-launcher:         /urs/bin/firefox
URxvt.matcher.button:       1

!! General
URxvt.buffered:             True
URxvt.saveLines:            5000
URxvt.perl-ext-common:      default,matcher

!! cursor
URxvt.cursorBlink:          true

!! Font
URxvt.font:                 xft:WenQuanYi MicroHei Mono-9
!URxvt.font:                xft:Source Code Pro For PowerLine:size=9

!! Scrollbar
urxvt.scrollbar:            true
urxvt.scrollstyle:          plain
urxvt.scrollbar_right:      true
urxvt.scrollttyoutput:      false
urxvt.scrollwithbuffer:     true
urxvt.scrollttykeypress:    true
urxvt.scrollbar_floating:   false

!! Colors
!! foreground/background
URxvt*background:           #2C2C2C
URxvt*foreground:           #EBEBFF
!!black
URxvt.color0:               #676767
URxvt.color8:               #555753
!!red
URxvt.color1:               #EA6868
URxvt.color9:               #FF7272
!!green
URxvt.color2:               #AFE600
URxvt.color10:              #AFE600
!!yellow
URxvt.color3:               #E8AE5B
URxvt.color11:              #FFA75D
!!blue
URxvt.color4:               #71C5F4
URxvt.color12:              #67CDE9
!!magenta
URxvt.color5:               #E2BAF1
URxvt.color13:              #ECAEE9
!!cyan
URxvt.color6:               #21F1EA
URxvt.color14:              #36FFFC
!!white
URxvt.color7:               #F1F1F1
URxvt.color15:              #EEEEEC



!! Xterm

!! look and feel
xterm.termName:             xterm-256color
xterm.saveLines:            4096
xterm*loginshell:           true
xterm*colorUL:              yellow
xterm*colorBD:              white

!! Cursor
xterm*cursorBlink:          true

!! fix alt key input
xterm*eightBitInput:        false
xterm*altSendsEscape:       true

!! ScrollBar
xterm*scrollBar:            false
xterm*rightScrollBar:       true

!! mouse selecting to copy, ctrl-v to paste
XTerm*VT100.Translations: #override \
    Ctrl <KeyPress> V: insert-selection(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
    <BtnUp>: select-end(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
    Ctrl <KeyPress> P: print() \n


